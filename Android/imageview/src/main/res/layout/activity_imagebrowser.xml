<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.lxq.ScrollViewPager
        android:id="@+id/imagebrowser_svp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView_left_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#ffcdcdcd"
            android:text="左转"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp" />

        <TextView
            android:id="@+id/textView_ImageBrowser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffcdcdcd"
            android:text="0"
            android:textSize="15sp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/textView_right_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:textColor="#ffcdcdcd"
            android:text="右转"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/textView_left_transfer"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp" />

    </RelativeLayout>

</RelativeLayout>